# VM Navigation
alias www='cd /var/www/magento';

# CLI
alias own='www;sudo chown -R vagrant:www-data * .*';
alias cache='php /var/www/magento/bin/magento cache:clean';
alias reindex='php /var/www/magento/bin/magento indexer:reindex';
alias clean='reindex && cache';
alias cron='php /var/www/magento/bin/magento cron:run';
alias staging='reindex && cron && cron && cache';
alias cache-flush='php /var/www/magento/bin/magento cache:flush && restart-varnish && flush-redis';
alias enable-cache='php /var/www/magento/bin/magento cache:enable';
alias disable-cache='php /var/www/magento/bin/magento cache:disable';
alias disable-cms-cache='php /var/www/magento/bin/magento cache:disable layout block_html full_page';
alias enable-modules='php /var/www/magento/bin/magento modules:enable --all';
alias db-upgrade='php /var/www/magento/bin/magento setup:upgrade';
alias di-compile='php /var/www/magento/bin/magento setup:di:compile';
alias deploy-content='php /var/www/magento/bin/magento setup:static-content:deploy';
alias deploy-content-de='php /var/www/magento/bin/magento setup:static-content:deploy de_DE';
alias dev-mode='disable-cache && php /var/www/magento/bin/magento deploy:mode:set developer && deploy-content && own';
alias prod-mode='php /var/www/magento/bin/magento deploy:mode:set production';
alias add-store='www && rm -rf var/cache/* var/page_cache/*';

# Extensions and Upgrades
alias add-key='eval $(ssh-agent) && ssh-add ~/.ssh/Magento-Cloud';
alias add-modules='www && db-upgrade && di-compile && deploy-content && deploy-content-de && own && clean';
alias refresh-theme='www && rm -rf var/view_preprocessed && deploy-content && cache-flush';
alias upgrade='www && add-key && composer update && own && db-upgrade && sudo chmod +x /var/www/magento/bin/magento && di-compile && deploy-content && deploy-content-de && own && clean';

# Database
alias db='mysql -u magento -ppassword';

# Tools
alias restart-web='sudo systemctl restart apache2';
alias restart-db='sudo systemctl restart mysql';
alias restart-varnish='sudo systemctl restart varnish';
alias restart-redis='sudo systemctl restart redis-server';
alias flush-redis='sudo redis-cli flushall';
alias warm-cache='www && sh cache-warmer.sh';
alias kill-php='sudo pkill -9 php';
alias vm-help='clear && cat ~/cli/help.txt';
