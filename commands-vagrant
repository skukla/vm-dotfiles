# VM Navigation
function www() {
  cd /var/www/magento
}
export -f www

# CLI
function own() {
  www
  sudo chown -R vagrant:vagrant var/cache/ var/page_cache/
  sudo chmod -R 777 var/ pub/ app/etc/ generated/
}
export -f own

function cache() {
  www
  printf "\nClearing cache...\n"
  ./bin/magento cache:clean
}
export -f cache

function flush-cache() {
  www
  printf "\nFlushing cache...\n"
  ./bin/magento cache:flush
  rm -rf var/cache/* var/page_cache/*
}
export -f flush-cache

function enable-cache() {
  www
  ./bin/magento cache:enable
}
export -f enable-cache

function disable-cache() {
  www
  ./bin/magento cache:disable
}
export -f disable-cache

function disable-cms-cache() {
  www
  ./bin/magento cache:disable layout block_html full_page
}
export -f disable-cms-cache

function reindex() {
  www
  printf "\nReindexing...\n"
  ./bin/magento indexer:reindex
}
export -f reindex

function clean() {
  reindex
  cache
}
export -f clean

function cron() {
  www
  printf "\nRunning cron jobs...\n"
  ./bin/magento cron:run
}
export -f cron

function staging() {
  reindex
  cron
  cron
  cache
}
export -f staging

function list-modules() {
  www
  ./bin/magento module:status
}
export -f list-modules

function enable-all-modules() {
  www
  ./bin/magento module:enable --all
}
export -f enable-all-modules

function process-catalogs() {
  www
  reindex
  cache
  cron
}
export -f process-catalogs

function db-upgrade() {
  www
  ./bin/magento setup:upgrade
}
export -f db-upgrade

function di-compile() {
  www && ./bin/magento setup:di:compile
}
export -f di-compile

function deploy-content() {
  www
  ./bin/magento setup:static-content:deploy -f
}
export -f deploy-content

function deploy-content-de() {
  www
  ./bin/magento setup:static-content:deploy de_DE -f
}
export -f deploy-content-de

function dev-mode() {
  www
  ./bin/magento deploy:mode:set developer
  cache
}
export -f dev-mode

function prod-mode() {
  www
  ./bin/magento deploy:mode:set production
  cache
}
export -f prod-mode

# Extensions and Upgrades
function add-key() {
  eval $(ssh-agent)
  ssh-add ~/.ssh/Magento-Cloud
}
export -f add-key

function update-composer() {
  www
  add-key
  composer update
}
export -f update-composer

function add-modules() {
  www
  db-upgrade
  di-compile
  deploy-content
  deploy-content-de
  clean
}
export -f add-modules

function refresh-theme() {
  www
  rm -rf var/view_preprocessed
  deploy-content
  cache
}
export -f refresh-theme

function upgrade() {
  www
  update-composer
  add-modules
}
export -f upgrade

# Web
function start-web() {
  sudo systemctl restart nginx
}
export -f start-web

function stop-web() {
  sudo systemctl stop nginx
}
export -f stop-web

function status-web() {
  sudo systemctl status nginx
}
export -f status-web

# Database
function db() {
  mysql -u magento -ppassword
}
export -f db

function start-db() {
  systemctl restart mysql
}
export -f start-db

function stop-db() {
  sudo systemctl stop mysql
}
export -f stop-db

function status-db() {
  sudo systemctl status mysql
}
export -f status-db

# Tools
function warm-cache() {
  sh ~/scripts/cache-warmer.sh
}
export -f warm-cache

function update-cli() {
  add-key
  cd ~/cli/
  git pull
  source ~/.bashrc
  www
}
export -f update-cli

function vm-help() {
  clear
  cat ~/cli/help.txt
}
export -f vm-help
